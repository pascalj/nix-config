# Spotlight
# https://news.ycombinator.com/item?id=34245712
bindsym $mod+o mode "spotlight"

mode "spotlight" {
   bindsym d exec zsh -c 'alacritty --working-directory ~/src/diss/'; mode "default"
   bindsym p exec zsh -c 'rifle ~/src/diss/jungblut.pdf'; mode "default"

   ## common binaries
   bindsym f exec firefox ; mode "default"
   bindsym h exec --no-startup-id zeal ; mode "default"
   bindsym z exec --no-startup-id zotero ; mode "default"
   bindsym o exec obsidian; mode "default"

   ## calculator
   bindsym c exec --no-startup-id zsh -c '~/.nix-profile/bin/rofi -show calc -no-sort -no-show-match -calc-command \"echo -n {result} | xclip -selection clipboard\" -no-history -lines 0' ; mode "default"
   bindsym s exec --no-startup-id zsh -c '~/.nix-profile/bin/rofi -show sink -modes "sink:~/bin/rofi_sound.sh" -no-history -lines 0' ; mode "default"
   bindsym e exec --no-startup-id zsh -c '~/.nix-profile/bin/rofi -modi "emoji:rofimoji" -show emoji' ; mode "default"

   ## just in case we did this by mistake
   bindsym Escape mode "default"
}


set $sink `pactl list short sinks | grep RUNNING | cut -f1 | tail -n 1`
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume $sink +5% && pkill -RTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume $sink -5% && pkill -RTMIN+10 i3blocks

bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute $sink toggle && pkill -RTMIN+10 i3blocks
bindsym $mod+XF86AudioMute exec --no-startup-id ~/bin/switch-sinks
bindsym $mod+Pause exec --no-startup-id systemctl suspend
bindsym $mod+Delete exec --no-startup-id systemctl suspend

# Screen brightness - needs ddcutil & i2c-dev kernel module
bindsym $mod+XF86AudioLowerVolume exec --no-startup-id ddcutil --bus 19 setvcp 10 - 10 && ddcutil --bus 20 setvcp 10 - 10 
bindsym XF86MonBrightnessUp exec brightnessctl s -- '+5'
bindsym XF86MonBrightnessDown exec brightnessctl s -- '-5' 
bindsym $mod+XF86AudioRaiseVolume exec --no-startup-id ddcutil --bus 19 setvcp 10 + 10 && ddcutil --bus 20 setvcp 10 + 10


